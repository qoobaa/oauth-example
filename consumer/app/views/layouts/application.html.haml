%head
  %title Company
%body
  %div= flash[:error]
  %div= flash[:notice]
  - if current_user
    %div
      logged in as
      = current_user.login
      (
      = link_to "logout", user_session_path, :method => :delete
      )
  - else
    %div
      not logged in
      (
      = link_to "login", new_user_session_path
      )
  %h1 COMPANY
  = yield
